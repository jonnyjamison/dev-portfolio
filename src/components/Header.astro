---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-500"
>
  <!-- Centered nav container -->
  <nav class="relative max-w-7xl mx-auto px-8 py-4">
    <ul class="flex items-center gap-8 justify-center">
      <li>
        <a href="#about" class="nav-link">
          About
        </a>
      </li>

      {hasProjects && (
        <li>
          <a href="#projects" class="nav-link">
            Projects
          </a>
        </li>
      )}

      {hasExperience && (
        <li>
          <a href="#experience" class="nav-link">
            Experience
          </a>
        </li>
      )}

      {hasEducation && (
        <li>
          <a href="#education" class="nav-link">
            Education
          </a>
        </li>
      )}
    </ul>
  </nav>

  <!-- Flush-right CV link -->
  <div class="absolute right-11 top-1/2 -translate-y-1/2">
    <a
      href="/j_jamison_CV.pdf"
      target="_blank"
      rel="noopener noreferrer"
      class="nav-link font-semibold"
    >
      Download CV
    </a>
  </div>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");

    if (window.scrollY > 100) {
      header?.classList.add("header-scrolled");
    } else {
      header?.classList.remove("header-scrolled");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }

  /* Default link styling */
  .nav-link {
    color: #374151; /* gray-700 */
    transition: color 0.3s ease;
    font-weight: 500;
  }

  .nav-link:hover {
    color: #111827; /* gray-900 */
  }

  /* Scrolled header appearance */
  .header-scrolled {
    background-color: rgba(110, 255, 170, 0.22); /* light neon green */
    backdrop-filter: blur(10px);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.04);
  }

  /* Slightly darken text on green */
  .header-scrolled .nav-link {
    color: #1f2937;
  }

  .header-scrolled .nav-link:hover {
    color: #000000;
  }
</style>
